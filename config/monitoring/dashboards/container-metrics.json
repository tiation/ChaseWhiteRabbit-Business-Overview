{
  "dashboard": {
    "id": null,
    "title": "ChaseWhiteRabbit - Container Metrics & Health",
    "description": "Detailed container monitoring for memory, CPU usage, and health status across all services",
    "tags": ["containers", "docker", "kubernetes", "chasewhiterabbit", "health"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Container CPU Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]) * 100",
            "legendFormat": "{{name}} - {{instance}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "CPU Usage (%)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "thresholds": [
          {"value": 80, "colorMode": "critical", "op": "gt"},
          {"value": 60, "colorMode": "warning", "op": "gt"}
        ]
      },
      {
        "id": 2,
        "title": "Container Memory Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name!=\"\"} / container_spec_memory_limit_bytes{name!=\"\"} * 100",
            "legendFormat": "{{name}} - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "container_memory_working_set_bytes{name!=\"\"} / container_spec_memory_limit_bytes{name!=\"\"} * 100",
            "legendFormat": "{{name}} - Working Set",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Memory Usage (%)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "thresholds": [
          {"value": 90, "colorMode": "critical", "op": "gt"},
          {"value": 75, "colorMode": "warning", "op": "gt"}
        ]
      },
      {
        "id": 3,
        "title": "Container Memory Usage (Absolute)",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name!=\"\"}",
            "legendFormat": "{{name}} - Usage",
            "refId": "A"
          },
          {
            "expr": "container_spec_memory_limit_bytes{name!=\"\"}",
            "legendFormat": "{{name}} - Limit",
            "refId": "B"
          },
          {
            "expr": "container_memory_cache{name!=\"\"}",
            "legendFormat": "{{name}} - Cache",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (Bytes)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Container Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name!=\"\"}[5m])",
            "legendFormat": "{{name}} - RX",
            "refId": "A"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name!=\"\"}[5m])",
            "legendFormat": "{{name}} - TX",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Container Filesystem Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_fs_usage_bytes{name!=\"\"} / container_fs_limit_bytes{name!=\"\"} * 100",
            "legendFormat": "{{name}} - {{device}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Filesystem Usage (%)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "thresholds": [
          {"value": 85, "colorMode": "critical", "op": "gt"},
          {"value": 70, "colorMode": "warning", "op": "gt"}
        ]
      },
      {
        "id": 6,
        "title": "Container Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "container_last_seen{name!=\"\"}",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 300},
                {"color": "green", "value": 600}
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Container Restart Count",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(kube_pod_container_status_restarts_total{namespace=\"chasewhiterabbit\"}[1h])",
            "legendFormat": "{{container}} - {{pod}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Restart Count",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24}
      },
      {
        "id": 8,
        "title": "Container Start Time Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "container_start_time_seconds{name!=\"\"}",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Start Time",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "container",
          "type": "query",
          "query": "label_values(container_cpu_usage_seconds_total, name)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(container_cpu_usage_seconds_total, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Container Restarts",
          "datasource": "Prometheus",
          "expr": "changes(container_start_time_seconds{name!=\"\"}[5m]) > 0",
          "titleFormat": "Container Restart",
          "textFormat": "{{name}} restarted on {{instance}}"
        }
      ]
    },
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
