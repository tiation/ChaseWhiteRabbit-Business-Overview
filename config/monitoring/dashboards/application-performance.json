{
  "dashboard": {
    "id": null,
    "title": "ChaseWhiteRabbit - Application Performance & Latency",
    "description": "Detailed monitoring of response times, request latencies, and performance metrics across services",
    "tags": ["performance", "latency", "response-time", "chasewhiterabbit", "application"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Latency Percentiles",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"chasewhiterabbit-app\"}[5m])) by (le, instance, method))",
            "legendFormat": "50th percentile - {{method}} {{instance}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket{job=\"chasewhiterabbit-app\"}[5m])) by (le, instance, method))",
            "legendFormat": "90th percentile - {{method}} {{instance}}",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"chasewhiterabbit-app\"}[5m])) by (le, instance, method))",
            "legendFormat": "95th percentile - {{method}} {{instance}}",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"chasewhiterabbit-app\"}[5m])) by (le, instance, method))",
            "legendFormat": "99th percentile - {{method}} {{instance}}",
            "refId": "D"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "min": 0
          }
        ],
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 0},
        "thresholds": [
          {"value": 1, "colorMode": "critical", "op": "gt"},
          {"value": 0.5, "colorMode": "warning", "op": "gt"}
        ]
      },
      {
        "id": 2,
        "title": "Response Time by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_sum{job=\"chasewhiterabbit-app\"}[5m]) / rate(http_request_duration_seconds_count{job=\"chasewhiterabbit-app\"}[5m])",
            "legendFormat": "{{handler}} - {{method}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Average Response Time (seconds)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 9}
      },
      {
        "id": 3,
        "title": "Request Rate by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"chasewhiterabbit-app\"}[5m])) by (instance, method, status)",
            "legendFormat": "{{instance}} - {{method}} {{status}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per second",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 9}
      },
      {
        "id": 4,
        "title": "Database Query Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pg_stat_user_tables_n_tup_ins[5m]) + rate(pg_stat_user_tables_n_tup_upd[5m]) + rate(pg_stat_user_tables_n_tup_del[5m])",
            "legendFormat": "{{schemaname}}.{{relname}} - Modifications/sec",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_user_tables_seq_scan[5m])",
            "legendFormat": "{{schemaname}}.{{relname}} - Sequential scans/sec",
            "refId": "B"
          },
          {
            "expr": "rate(pg_stat_user_tables_idx_scan[5m])",
            "legendFormat": "{{schemaname}}.{{relname}} - Index scans/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Operations per second",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 17}
      },
      {
        "id": 5,
        "title": "Internal Queue Sizes",
        "type": "graph",
        "targets": [
          {
            "expr": "queue_size{job=\"queue-metrics\"}",
            "legendFormat": "{{queue_name}} - {{service_type}}",
            "refId": "A"
          },
          {
            "expr": "queue_pending_jobs{job=\"queue-metrics\"}",
            "legendFormat": "{{queue_name}} - Pending",
            "refId": "B"
          },
          {
            "expr": "queue_processing_jobs{job=\"queue-metrics\"}",
            "legendFormat": "{{queue_name}} - Processing",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Queue Size",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 25},
        "thresholds": [
          {"value": 1000, "colorMode": "critical", "op": "gt"},
          {"value": 500, "colorMode": "warning", "op": "gt"}
        ]
      },
      {
        "id": 6,
        "title": "Queue Processing Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(queue_job_duration_seconds_bucket{job=\"queue-metrics\"}[5m]))",
            "legendFormat": "95th percentile - {{queue_name}}",
            "refId": "A"
          },
          {
            "expr": "rate(queue_job_duration_seconds_sum{job=\"queue-metrics\"}[5m]) / rate(queue_job_duration_seconds_count{job=\"queue-metrics\"}[5m])",
            "legendFormat": "Average - {{queue_name}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Processing Time (seconds)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 25}
      },
      {
        "id": 7,
        "title": "Slow Query Detection",
        "type": "table",
        "targets": [
          {
            "expr": "pg_stat_activity_max_tx_duration > 10",
            "format": "table",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 33}
      },
      {
        "id": 8,
        "title": "Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m])) * 100",
            "legendFormat": "Cache Hit Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 41}
      },
      {
        "id": 9,
        "title": "Memory Cache Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_memory_used_bytes / redis_memory_max_bytes * 100",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          },
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Connected Clients",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Usage / Clients",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 41}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(http_requests_total, job)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(http_requests_total{job=\"$service\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "method",
          "type": "query",
          "query": "label_values(http_requests_total{job=\"$service\"}, method)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Slow Queries",
          "datasource": "Prometheus",
          "expr": "pg_stat_activity_max_tx_duration > 30",
          "titleFormat": "Slow Query Alert",
          "textFormat": "Query running for {{$value}}s"
        },
        {
          "name": "High Queue Size",
          "datasource": "Prometheus",
          "expr": "queue_size > 1000",
          "titleFormat": "Queue Overflow",
          "textFormat": "{{queue_name}} has {{$value}} jobs"
        }
      ]
    },
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
